class Solution {
    public int peakIndexInMountainArray(int[] arr) {
        int n = arr.length;
        int max = 0;
        int idx = 0;
        for(int i=0;i<n;i++){
            if(arr[i]>max){
                 max = arr[i];
                 idx = i;
                 if(arr[i+1]<max){
                    return idx;
                 }
            }
        }
        return idx;
    }
}
