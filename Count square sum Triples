class Solution {
    public int countTriples(int n) {
        int count = 0;
        for(int a=1;a<=n;a++){
            for(int b = 1;b<=n;b++){
                int c1 = a * a + b * b;
                int c = (int) Math.sqrt(c1);
                if(c<=n && c * c == c1){
                    count++;
                }
            }
        }
        return count;
    }
}
