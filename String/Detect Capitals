class Solution {
    public boolean detectCapitalUse(String word) {
        int upperCount = 0;
        int n = word.length();

        // Count uppercase letters
        for (int i = 0; i < n; i++) {
            char c = word.charAt(i);
            if (Character.isUpperCase(c)) {
                upperCount++;
            }
        }

        // Case 1: All letters are uppercase (e.g. "USA")
        if (upperCount == n) return true;

        // Case 2: All letters are lowercase (e.g. "leetcode")
        if (upperCount == 0) return true;

        // Case 3: Only first letter uppercase (e.g. "Google")
        if (upperCount == 1 && Character.isUpperCase(word.charAt(0))) return true;

        return false;
    }
}
