class Solution {
    public int numOfWays(int n) {
        long MOD = 1000000007;
        long typeA = 6;// ABA pattern
        long typeB = 6;// ABC pattern
        for (int i = 2; i <= n; i++) {
            long newA = (2 * typeA + 2 * typeB) % MOD;
            long newB = (2 * typeA + 3 * typeB) % MOD;
            typeA = newA;
            typeB = newB;
        }
        return (int)((typeA + typeB) % MOD);
    }
}
