class Solution {
    public int largestPerimeter(int[] nums) {
        
        Arrays.sort(nums);
        int n = nums.length;
        // traversing from last to get largest perimeter 
        for(int i=n-1;i>1;i--){
              //cheking triangle property 
              // a+b>c,b+c>a,a+c>b
              if(nums[i]< nums[i-1]+ nums[i-2]){
                return nums[i] + nums[i-1] + nums[i-2];
              }
        }
        return 0;
    }
}
