class Solution {
    public long getDescentPeriods(int[] p) {
        int n = p.length;
        long c = 1;
        long ans = 1;
         //if(n==1) return 1;
         
         for(int i=1;i<n;i++){
            if(p[i] == p[i-1]-1){
                c++;
            }
            else{
                c=1;
            }
            ans = ans + c;
         }
         
         return ans;
    }
}
